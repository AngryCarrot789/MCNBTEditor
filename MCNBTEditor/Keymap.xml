<KeyMap>
    <Group Name="Application">
        <Group Name="Views">
            <Shortcut Name="CloseWindowShortcut" ActionId="actions.views.windows.CloseViewAction" Global="true">
                <KeyStroke Key="Escape"/>
            </Shortcut>
        </Group>
        <Group Name="TabbedControl">
            <Shortcut Name="CloseTabShortcut" ActionId="actions.tabs.CloseTabAction">
                <MouseStroke Button="Middle"/>
            </Shortcut>
        </Group>
        <Group Name="EditorView">
            <Group Name="NBTTag">
                <Shortcut Name="CopyNameShortcut" DisplayName="Copy Name" ActionId="actions.nbt.copy.name">
                    <KeyStroke Mods="CTRL+ALT" Key="C"/>
                </Shortcut>
                <Shortcut Name="CopyValueShortcut" DisplayName="Copy Value" ActionId="actions.nbt.copy.primitive_value">
                    <KeyStroke Mods="CTRL+SHIFT" Key="C"/>
                </Shortcut>
                <Shortcut Name="CopyBinaryShortcut" DisplayName="Copy (Binary)" ActionId="actions.nbt.copy.binary.sysclipboard">
                    <KeyStroke Mods="CTRL" Key="C"/>
                </Shortcut>
                <Shortcut Name="PasteBinaryShortcut" DisplayName="Paste (Binary)" ActionId="actions.nbt.paste.binary.sysclipboard">
                    <KeyStroke Mods="CTRL" Key="V"/>
                </Shortcut>
                <Shortcut Name="RenameShortcut1" DisplayName="Rename" ActionId="actions.nbt.rename.tag">
                    <KeyStroke Mods="CTRL" Key="R"/>
                </Shortcut>
                <Shortcut Name="RenameShortcut2" DisplayName="Rename" ActionId="actions.nbt.rename.tag">
                    <KeyStroke Key="F2"/>
                </Shortcut>
                <Shortcut Name="RemoveFromParent" DisplayName="Remove tag" ActionId="actions.nbt.remove_from_parent">
                    <KeyStroke Key="Delete"/>
                </Shortcut>
                <Shortcut Name="Save" DisplayName="Save">
                    <KeyStroke Mods="CTRL" Key="S"/>
                </Shortcut>
                <Shortcut Name="SaveAs" DisplayName="Save as...">
                    <KeyStroke Mods="CTRL+SHIFT" Key="S"/>
                </Shortcut>
                <Shortcut Name="CopyFilePath" DisplayName="Copy file path">
                    <KeyStroke Mods="CTRL+ALT+SHIFT" Key="C"/>
                </Shortcut>
                <Shortcut Name="OpenInExplorer" DisplayName="Show in Explorer">
                    <KeyStroke Mods="CTRL+SHIFT" Key="O"/>
                </Shortcut>
            </Group>
            <Shortcut Name="FindShortcut" DisplayName="Find..." ActionId="actions.nbt.find" Inherit="true">
                <KeyStroke Mods="CTRL" Key="F"/>
            </Shortcut>
            <Shortcut Name="OpenFile" DisplayName="Open File" Inherit="true" ActionId="actions.main-window.OpenFile">
                <KeyStroke Mods="CTRL" Key="O"/>
            </Shortcut>
            <Shortcut Name="FindShortcutGlobal" DisplayName="Find everywhere..." ActionId="actions.nbt.find" Inherit="true">
                <Shortcut.Context>
                    <Flag Key="IsGlobalFind" Value="True"/>
                </Shortcut.Context>
                <KeyStroke Mods="CTRL+SHIFT" Key="F"/>
            </Shortcut>
        </Group>
    </Group>
</KeyMap>